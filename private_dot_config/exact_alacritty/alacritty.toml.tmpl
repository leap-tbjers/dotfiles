# -*-mode:toml-*- vim:ft=toml.gotexttmpl
# Configuration for Alacritty, the GPU enhanced terminal emulator
# {{ $mac := "darwin" }}

import = ["{{ .chezmoi.homeDir }}/.config/alacritty/themes/{{ .colortheme }}.toml"]
live_config_reload = true

{{ if eq .chezmoi.os $mac -}}{{ else -}}
[shell]
program = "distrobox"
args = ["enter", "bluefin-cli"]
{{- end }}

[bell]
animation = "EaseOutExpo"
color = "#3c3836"
duration = 75

[colors]
draw_bold_text_with_bright_colors = true

[cursor]
blink_interval = 750
blink_timeout = 5
unfocused_hollow = true

[cursor.style]
blinking = "On"
shape = "Block"

[cursor.vi_mode_style]
blinking = "On"
shape = "Beam"

[env]
TERM = "xterm-256color"

[font]
builtin_box_drawing = true
size = 14

[font.bold]
style = "Regular"

[font.bold_italic]
style = "Italic"

[font.italic]
style = "Light Italic"

[font.normal]
family = "{{ if eq .chezmoi.os $mac }}JetBrainsMono Nerd Font{{ else }}JetBrains Mono{{ end }}"
style = "Light"

[mouse]
hide_when_typing = true

[window]
decorations = "none"
decorations_theme_variant = "Dark"
dynamic_padding = true
dynamic_title = true
opacity = 0.95
startup_mode = "Maximized"
title = "Alacritty"

[window.class]
general = "Alacritty"
instance = "Alacritty"

[window.padding]
x = 4
y = 4

[scrolling]
history = 100000
multiplier = 3
